{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "adjustments.schema.json",
  "title": "Adjustments",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["id", "partId", "delta", "timestamp"],
    "properties": {
      "id": { "type": "string" },
      "partId": { "type": "string" },
      "delta": { "type": "integer" },
      "timestamp": { "type": "string", "format": "date-time" },
      "reason": { "type": "string" }
    }
  }
}
